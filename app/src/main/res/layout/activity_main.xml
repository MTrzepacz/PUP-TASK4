<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mtrzepacz.androidlayouts.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="-9dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/buttonFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show FrameLayout" />

        <Button
            android:id="@+id/buttonLinearLayoutHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show LinearLayout (Horizontal)" />

        <Button
            android:id="@+id/buttonTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show TableLayout" />

        <Button
            android:id="@+id/buttonGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show GridLayout" />

        <Button
            android:id="@+id/buttonRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show RelativeLayout" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
